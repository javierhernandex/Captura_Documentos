                                @Html.ValidationMessageFor(model => model.VE_VEHI, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_NOMPROV, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_NOMPROV, new { htmlAttributes = new { @class = "form-control", placeholder = "Nombre Proveedor" } })
                                @Html.ValidationMessageFor(model => model.VE_NOMPROV, "", new { @class = "text-danger" })
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_RFC, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_RFC, new { htmlAttributes = new { @class = "form-control", placeholder = "R.F.C Proveedor" } })
                                @Html.ValidationMessageFor(model => model.VE_RFC, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_PERPROV, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_PERPROV, new { htmlAttributes = new { @class = "form-control", placeholder = "Permiso Proveedor" } })
                                @Html.ValidationMessageFor(model => model.VE_PERPROV, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_PC, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_PC, new { htmlAttributes = new { @class = "form-control", placeholder = "Precio Compra" } })
                                @Html.ValidationMessageFor(model => model.VE_PC, "", new { @class = "text-danger" })
                            </div>



                        </div>

                        <hr />
                        <div class="form-group">
                            <div class="col-md-offset-7 col-md-3">
                                @Html.LabelFor(modal => modal.VE_VDOC, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_VDOC, new { htmlAttributes = new { @class = "form-control", placeholder = "Documentado" } })
                                @Html.ValidationMessageFor(model => model.VE_VDOC, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-7 col-md-10">
