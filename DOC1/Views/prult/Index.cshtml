@model DOC1.Send_Carga

@{
    ViewBag.Title = "Index";
}

@{

    var lstvalores = new List<SelectListItem>();


    lstvalores.Add(new SelectListItem() { Value = "", Text = "Seleccionar".ToString() });
    lstvalores.Add(new SelectListItem() { Value = "CP".ToString(), Text = "CP".ToString() });
    lstvalores.Add(new SelectListItem() { Value = "RP".ToString(), Text = "RP".ToString() });
    lstvalores.Add(new SelectListItem() { Value = "PC".ToString(), Text = "PC".ToString() });

    var proveedor = new List<SelectListItem>();
    proveedor.Add(new SelectListItem() { Value = "", Text = "Seleccionar".ToString() });
    proveedor.Add(new SelectListItem() { Value = "Nacional".ToString(), Text = "Nacional".ToString() });
    proveedor.Add(new SelectListItem() { Value = "Nacional".ToString(), Text = "Extrangero".ToString() });


}

<style>
    #mdialTamanio {
        width: 80% !important;
    }
</style>





<div class="modal fade" id="DD" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    <div class="modal-dialog  " id="mdialTamanio">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">Registro</h4>
            </div>

            <div class="modal-body">

                <form id="loginform" class="form-horizontal" role="form" method="post">


                    <div class="form-horizontal">


                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })




                        <div class="form-group">
                            <div class="col-md-3">

                                @Html.LabelFor(m => m.VE_TERM, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_TERM, new { htmlAttributes = new { @class = "form-control", placeholder = "T.A.D.E." } })
                                @Html.ValidationMessageFor(model => model.VE_TERM, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-3">

                                @Html.LabelFor(m => m.VE_PAD, htmlAttributes: new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_PAD, new { htmlAttributes = new { @class = "form-control", placeholder = "Permiso T.A.D.E." } })
                                @Html.ValidationMessageFor(model => model.VE_PAD, "", new { @class = "text-danger" })

