                                    @Html.ValidationMessageFor(model => model.VE_FDOC, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_TDOC, new { @class = "control-label" })
                                @Html.DropDownListFor(m => m.VE_TDOC, lstvalores, new { @class = "form-control" })
                                @Html.ValidationMessageFor(model => model.VE_TDOC, "", new { @class = "text-danger" })
                            </div>

                        </div>

                        <div class="form-group">
                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_FOLR, new { @class = "control-label" })

                                @Html.EditorFor(m => m.VE_FOLR, new { htmlAttributes = new { @class = "form-control", placeholder = "Folio Recepcion" } })
                                @Html.ValidationMessageFor(model => model.VE_FOLR, "", new { @class = "text-danger" })
                            </div>

