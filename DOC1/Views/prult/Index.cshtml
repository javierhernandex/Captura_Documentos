                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_TP, new { @class = "control-label" })
                                @Html.DropDownListFor(m => m.VE_TP, proveedor, new { @class = "form-control", placeholder = "Folio Recepcion" })
                                @Html.ValidationMessageFor(model => model.VE_TP, "", new { @class = "text-danger" })
                            </div>


                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_MONTO, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_MONTO, new { htmlAttributes = new { @class = "form-control", placeholder = "Importe en pesos" } })
                                @Html.ValidationMessageFor(model => model.VE_MONTO, "", new { @class = "text-danger" })
                            </div>

                        </div>
                        <div class="form-group">
                            <div class="col-md-3 ">
                                @Html.LabelFor(m => m.VE_PERTRA, new { @class = "control-label" })
                                @Html.EditorFor(m => m.VE_PERTRA, new { htmlAttributes = new { @class = "form-control", placeholder = "Permiso Transporte" } })
                                @Html.ValidationMessageFor(model => model.VE_PERTRA, "", new { @class = "text-danger" })
                            </div>

                            <div class="col-md-3">
                                @Html.LabelFor(m => m.VE_VEHI, new { @class = "control-label" })
