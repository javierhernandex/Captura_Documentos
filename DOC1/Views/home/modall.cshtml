@model DOC1.Send_Carga

<style>
    #Tamanio {
        width: 20% !important;
    }

    #mtamaño {
        width: 25% !important;
    }
</style>

<div class="modal fade" id="errorma" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" data-backdrop="static"
     data-keyboard="false">
    <div class="modal-dialog " id="mtamaño">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
                <h4 class="modal-title" id="myModalLabel">No se ha capturado Cabecera</h4>
            </div>

            <div class="modal-body">
                <div>
                    <p class="text-center">¿Desea Capturar Cabecera?</p>
                </div>
                <form id="loginformm" class="form-horizontal" role="form" method="post">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()


                        <div class="form-horizontal">

                            <div class="form-group">
                                @Html.HiddenFor(m => m.VE_PROD, new { @id = "clave" })
                                @Html.HiddenFor(m => m.VE_HFI, new { @id = "hfi" })
                                @Html.HiddenFor(m => m.VE_TREG, new { @id = "tregm" })
                                @Html.HiddenFor(m => m.VE_CLVPRO, new { @id = "clave1" })
                                @Html.HiddenFor(m => m.VE_CLVSUBPRO, new { @id = "sub" })
                            </div>

                            <div class="col-lg-offset-3">

                                <input type="submit" id="cma" value="Aceptar" name="MA"  class="btn btn-primary">
                                <span class="btn btn-danger" , data-dismiss="modal" aria-label="close">Cancelar</span>
                            </div>
                        </div>
                    }
                </form>
            </div>
        </div>
    </div>
</div>          


<div class="form-group">
    @Html.HiddenFor(m => m.VE_PROD, new { @id = "clave" })
    @Html.HiddenFor(m => m.VE_HFI, new { @id = "hfi" })
    @Html.HiddenFor(m => m.VE_TREG, new { @id = "tregm" })
    @Html.HiddenFor(m => m.VE_CLVPRO, new { @id = "clave1" })
    @Html.HiddenFor(m => m.VE_CLVSUBPRO, new { @id = "sub" })
</div>